{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build all files",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g3",
                "-I${workspaceFolder}/includes",
                "-I${workspaceFolder}/mlx_linux",
                "${workspaceFolder}/*.c",
                "-L${workspaceFolder}/mlx_linux",
                "-lmlx_Linux",
                "-L/usr/lib",
                "-I${workspaceFolder}/mlx_linux",
                "-L${workspaceFolder}/libft",
                "-lftprintf",
                "-lXext",
                "-lX11",
                "-lm",
                "-lz",
                "-o",
                "${workspaceFolder}/so_long"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "gcc compiler"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}